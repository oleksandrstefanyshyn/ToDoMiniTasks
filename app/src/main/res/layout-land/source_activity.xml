<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SourceActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/enter_data_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_data"/>

    <Button
        android:id="@+id/pass_data_next_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pass_data_to_the_next_activity"/>

    <Button
        android:id="@+id/pass_data_get_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pass_data_and_get_result_back"/>

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
</LinearLayout>